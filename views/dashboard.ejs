<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Blue Hark - Dashboard</title>
  <link rel="stylesheet" href="/style.css">
  <style>
    /* Inline CSS for Dashboard page */
    .button-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      margin-top: 20px;
    }
    .button-container form {
      margin: 5px;
    }
    .button-container button {
      background-color: #ffc107;
      color: #333;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      font-size: 1rem;
      cursor: pointer;
      transition: background-color 0.3s ease, transform 0.2s ease;
    }
    .button-container button:hover {
      background-color: #e0a800;
      transform: scale(1.05);
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    table, th, td {
      border: 1px solid #fff;
    }
    th, td {
      padding: 10px;
      text-align: left;
    }
    th {
      background: rgba(0, 0, 0, 0.3);
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Dashboard for "<%= giveaway.name %>"</h1>
    <p>Channel Link: <a href="<%= giveaway.channel_link %>"><%= giveaway.channel_link %></a></p>
    
    <h2>Referral Leaderboard</h2>
    <table>
      <thead>
        <tr>
          <th>Referrer Name</th>
          <th>Referral Count</th>
        </tr>
      </thead>
      <tbody>
        <% referrals.forEach(function(referral) { %>
          <tr>
            <td><%= referral.referrer_name %></td>
            <td><%= referral.referral_count %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
    
    <p>Your Giveaway Link: <a href="/giveaway/<%= giveaway.id %>">/giveaway/<%= giveaway.id %></a></p>
    
    <!-- Dashboard Action Buttons -->
    <div class="button-container">
      <form action="/delete/<%= giveaway.id %>" method="POST">
        <button type="submit">Delete Giveaway</button>
      </form>
      <form action="/" method="GET">
        <button type="submit">Home</button>
      </form>
    </div>
  </div>
</body>
</html>
