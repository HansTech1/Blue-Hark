<!DOCTYPE html>
<html>
<head>
<style id="global-css">
/* Import Google Fonts */
@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap');

/* Reset and Global Settings */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Roboto', sans-serif;
  background: linear-gradient(to right, #1e3c72, #2a5298);
  color: #fff;
  line-height: 1.6;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* Container */
.container {
  width: 90%;
  max-width: 1200px;
  margin: 20px auto;
  padding: 20px;
  background: rgba(0, 0, 0, 0.25);
  border-radius: 10px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.5);
}

/* Header */
header {
  background: rgba(0, 0, 0, 0.5);
  padding: 20px;
  margin-bottom: 20px;
  border-bottom: 2px solid #ffc107;
  text-align: center;
}

header h1 {
  font-size: 2.5rem;
  margin-bottom: 10px;
}

nav {
  margin-top: 10px;
}

nav a {
  color: #ffc107;
  text-decoration: none;
  font-weight: 500;
  margin: 0 10px;
  transition: color 0.3s ease;
}

nav a:hover {
  color: #e0a800;
}

/* Footer */
footer {
  background: rgba(0, 0, 0, 0.5);
  text-align: center;
  padding: 15px 10px;
  margin-top: auto;
  border-top: 2px solid #ffc107;
  font-size: 0.9rem;
}

/* Headings */
h1, h2, h3, h4 {
  margin-bottom: 15px;
  text-align: center;
}

h1 {
  font-size: 2.5rem;
}

h2 {
  font-size: 2rem;
  border-bottom: 2px solid #ffc107;
  padding-bottom: 5px;
}

/* Paragraphs */
p {
  margin-bottom: 15px;
  font-size: 1rem;
  line-height: 1.5;
}

/* Forms */
form {
  background: rgba(255, 255, 255, 0.15);
  padding: 30px;
  border-radius: 8px;
  margin-bottom: 20px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.3);
}

form label {
  display: block;
  margin-bottom: 8px;
  font-weight: 500;
}

form input[type="text"],
form input[type="password"],
form input[type="email"],
form textarea {
  width: 100%;
  padding: 12px;
  margin-bottom: 15px;
  border: none;
  border-radius: 5px;
  background: rgba(255, 255, 255, 0.25);
  color: #fff;
  font-size: 1rem;
  transition: background 0.3s ease;
}

form input[type="text"]:focus,
form input[type="password"]:focus,
form input[type="email"]:focus,
form textarea:focus {
  background: rgba(255, 255, 255, 0.35);
  outline: none;
}

form button {
  width: 100%;
  padding: 15px;
  border: none;
  border-radius: 5px;
  background: #ffc107;
  color: #333;
  font-size: 1.1rem;
  font-weight: 700;
  cursor: pointer;
  transition: background 0.3s ease, transform 0.2s ease;
}

form button:hover {
  background: #e0a800;
  transform: scale(1.02);
}

/* Tables */
table {
  width: 100%;
  border-collapse: collapse;
  margin-bottom: 20px;
  background: rgba(255, 255, 255, 0.1);
}

table th,
table td {
  padding: 12px 15px;
  border: 1px solid rgba(255, 255, 255, 0.2);
  text-align: left;
}

table th {
  background: rgba(0, 0, 0, 0.3);
  font-weight: 700;
}

/* Lists */
ul {
  list-style: none;
  padding: 0;
}

li {
  background: rgba(255, 255, 255, 0.15);
  margin-bottom: 10px;
  padding: 12px;
  border-radius: 5px;
  transition: background 0.3s ease;
}

li:hover {
  background: rgba(255, 255, 255, 0.25);
}

/* Buttons (non-form) */
.btn {
  display: inline-block;
  background: #ffc107;
  color: #333;
  padding: 12px 25px;
  border-radius: 5px;
  text-decoration: none;
  font-weight: 600;
  transition: background 0.3s ease, transform 0.2s ease;
}

.btn:hover {
  background: #e0a800;
  transform: scale(1.05);
}

/* Utility Classes */
.text-center {
  text-align: center;
}

.mt-20 {
  margin-top: 20px;
}

.mb-20 {
  margin-bottom: 20px;
}

/* Animations */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

.fade-in {
  animation: fadeIn 0.6s ease-out both;
}

/* Responsive Design */
@media (max-width: 768px) {
  header h1 {
    font-size: 2rem;
  }
  
  nav a {
    margin: 0 5px;
    font-size: 0.9rem;
  }
  
  .container {
    padding: 15px;
  }
  
  table, thead, tbody, th, td, tr {
    display: block;
  }
  
  table tr {
    margin-bottom: 15px;
  }
  
  table td {
    text-align: right;
    padding-left: 50%;
    position: relative;
  }
  
  table td::before {
    content: attr(data-label);
    position: absolute;
    left: 10px;
    text-align: left;
    font-weight: 700;
  }
}

/* Specific Section Styles for Blue Hark (Custom Branding) */
.blue-hark-header {
  background: rgba(30, 60, 114, 0.8);
  border-bottom: 4px solid #ffc107;
}

.blue-hark-footer {
  background: rgba(30, 60, 114, 0.8);
  border-top: 4px solid #ffc107;
}

.blue-hark-btn {
  background: #ffc107;
  color: #1e3c72;
  border: 2px solid #1e3c72;
}

.blue-hark-btn:hover {
  background: #e0a800;
}

/* Custom Card Styles */
.card {
  background: rgba(255, 255, 255, 0.1);
  padding: 20px;
  border-radius: 8px;
  margin-bottom: 20px;
  box-shadow: 0 4px 8px rgba(0,0,0,0.3);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 16px rgba(0,0,0,0.4);
}

/* Form Specific Enhancements */
.form-group {
  margin-bottom: 15px;
}

.form-group label {
  display: block;
  margin-bottom: 8px;
}

.form-group input,
.form-group textarea {
  width: 100%;
  padding: 10px;
  border: none;
  border-radius: 4px;
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  font-size: 1rem;
}

/* Alerts */
.alert {
  padding: 15px;
  border-radius: 4px;
  margin-bottom: 20px;
  text-align: center;
  font-weight: 600;
}

.alert-success {
  background: rgba(40, 167, 69, 0.8);
  color: #fff;
}

.alert-error {
  background: rgba(220, 53, 69, 0.8);
  color: #fff;
}
</style>
